<div class="apod-results">
  <h2>Astronomy Picture of the Day</h2>
    <div class="apod-image-and-description">
      <h4><h3>Title: </h3>{{title}}</h4>
      <img src="{{hdurl}}" class="apod-photo">{{hdurl}}</img>
      <h4 class="apod-description"> <h3>Desription:</h3> {{{explanation}}}</h4>
      <h4><h3> Date:</h3>{{date}}</h4>
      <h4><h3>Copyright:</h3>{{copyright}}</h4>
    </div>
    <form class="add-picture">
    <fieldset>
      <input type="text" name="picture[title]" value="{{title}}">
      <input type="text" name="picture[date]" value="{{date}}">
      <input type="text" name="picture[description]" value="{{explanation}}">
      <input type="text" name="picture[hdurl]" value="{{hdurl}}">
      <button type="submit" id="save-apod-to-favorites" class="btn btn-primary">Save to Favorites</button>
    </fieldset>
  </form>
</div>
